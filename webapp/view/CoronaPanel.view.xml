<mvc:View
        controllerName="sap.ui.demo.practice.controller.App"
        xmlns="sap.m"
        xmlns:table="sap.ui.table"
        xmlns:mvc="sap.ui.core.mvc"
        displayBlock="true"
>
<Panel headerText="{i18n>coronaStats}" class="sapUiResponsiveMargin" width="auto">
    <table:Table selectionMode="None" rows="{corona>/}">
        <table:columns>
            <table:Column>
                <Label text="{i18n>date}" />
                <table:template>
                    <Label text="{corona>date}" />
                </table:template>
            </table:Column>
            <table:Column>
                <Label text="{i18n>positive}" />
                <table:template>
                    <Label text="{corona>positive}" />
                </table:template>
            </table:Column>
            <table:Column>
                <Label text="{i18n>negative}" />
                <table:template>
                    <Label text="{corona>negative}" />
                </table:template>
            </table:Column>
        </table:columns>
    </table:Table>
</Panel>
</mvc:View>